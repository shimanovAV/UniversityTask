<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>FirstServlet</servlet-name>
        <servlet-class>bsu.edu.practise.FirstServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatusServlet</servlet-name>
        <servlet-class>bsu.edu.practise.StatusServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NameServlet</servlet-name>
        <servlet-class>bsu.edu.practise.NameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JSONServlet</servlet-name>
        <servlet-class>bsu.edu.practise.JSONServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Test1Servlet</servlet-name>
        <servlet-class>bsu.edu.practise.Test1Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Test2Servlet</servlet-name>
        <servlet-class>bsu.edu.practise.Test2Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Page</servlet-name>
        <jsp-file>/WEB-INF/page.html</jsp-file>
    </servlet>
    <filter>
        <filter-name>MethodFilter</filter-name>
        <filter-class>bsu.edu.practise.MethodFilter</filter-class>
    </filter>



    <servlet-mapping>
        <servlet-name>FirstServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatusServlet</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NameServlet</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JSONServlet</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Page</servlet-name>
        <url-pattern>/page</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Test1Servlet</servlet-name>
        <url-pattern>/test1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Test2Servlet</servlet-name>
        <url-pattern>/test2</url-pattern>
    </servlet-mapping>
    <filter-mapping>
        <filter-name>MethodFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


</web-app>