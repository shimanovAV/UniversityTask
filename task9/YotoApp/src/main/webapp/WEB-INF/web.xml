<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>FirstServlet</servlet-name>
        <servlet-class>by.bsu.practice.task8.FirstServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatusServlet</servlet-name>
        <servlet-class>by.bsu.practice.task8.StatusServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NameServlet</servlet-name>
        <servlet-class>by.bsu.practice.task8.NameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JSONServlet</servlet-name>
        <servlet-class>by.bsu.practice.task8.JSONServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Test1Servlet</servlet-name>
        <servlet-class>by.bsu.practice.task8.Test1Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Test2Servlet</servlet-name>
        <servlet-class>by.bsu.practice.task8.Test2Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Page</servlet-name>
        <jsp-file>/WEB-INF/page.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Post</servlet-name>
        <servlet-class>by.bsu.practice.task9.controller.PostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostCollection</servlet-name>
        <servlet-class>by.bsu.practice.task9.controller.PostCollectionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>User</servlet-name>
        <servlet-class>by.bsu.practice.task9.controller.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Like</servlet-name>
        <servlet-class>by.bsu.practice.task9.controller.LikeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Image</servlet-name>
        <servlet-class>by.bsu.practice.task9.controller.UploadServlet</servlet-class>
    </servlet>
    <filter>
        <filter-name>MethodFilter</filter-name>
        <filter-class>by.bsu.practice.task8.MethodFilter</filter-class>
    </filter>



    <servlet-mapping>
        <servlet-name>FirstServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatusServlet</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NameServlet</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JSONServlet</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Page</servlet-name>
        <url-pattern>/page</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Test1Servlet</servlet-name>
        <url-pattern>/test1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Test2Servlet</servlet-name>
        <url-pattern>/test2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Post</servlet-name>
        <url-pattern>/photo-post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostCollection</servlet-name>
        <url-pattern>/photoposts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Like</servlet-name>
        <url-pattern>/like</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Image</servlet-name>
        <url-pattern>/image</url-pattern>
    </servlet-mapping>
    <filter-mapping>
        <filter-name>MethodFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


</web-app>